@model EventCalendar.Models.EventDetailsModel
@using System.Globalization


<script type="text/javascript">
    $(document).ready(function () {
        var myLatlng = new google.maps.LatLng(@Model.Latitude,@Model.Longitude);
        var mapOptions = {
            center: myLatlng,
            zoom: 14,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map_canvas"),
            mapOptions);
        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title:"Your Target"
        });
    });
</script>

<section class="EventDetails">
<div class="row-fluid">
    <h1>@Model.Title</h1>
</div>
<div class="row-fluid clearfix">
    <div class="span4" id="settings">
        <p>Start: @Model.StartDate</p>
        <p>End: @Model.EndDate</p>
    </div>
    <div class="span8" id="location">
        <div class="row-fluid">
            <h2>Location</h2>
        </div>
        <div class="row-fluid">
            <div id="map_canvas" style="height:300px"></div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12" id="description">
        @Html.Raw(Model.Description)
    </div>
</div>
</section>