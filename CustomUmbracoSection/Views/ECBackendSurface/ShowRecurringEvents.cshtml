@using EventCalendar.Models
@model List<RecurringEventListModel>
@using System.Web.Mvc.Html

<link type="text/css" href="@Url.Content("~/css/EventCalendar/bootstrap.css")" rel="stylesheet" />

<table class="table table-striped table-condensed table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>AllDay</th>
            <th>Day</th>
            <th>Frequenzy</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td><a href="~/umbraco/EventCalendar/ECBackendSurface/EditRecurringEvent/?id=@e.Id">@e.title</a></td>
                <td>@e.allDay</td>
                <td>@e.day</td>
                <td>@e.frequency</td>
                <td>@Html.ActionLink("Delete", "DeleteRecurringEvent", new { id = e.Id })</td>
            </tr>
        }
    </tbody>
<tfoot></tfoot>
</table>